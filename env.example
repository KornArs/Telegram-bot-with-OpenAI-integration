# Конфигурация для Telegram-бота с оплатой и OpenAI

# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# ID чата администратора для уведомлений об оплате
ADMIN_CHAT_ID=your_admin_chat_id_here

# Секретный ключ для админского API
ADMIN_KEY=your_admin_key_here

# Время debounce в секундах (защита от флуда)
DEBOUNCE_SECONDS=6

# Максимальное время ожидания в секундах
MAX_WAIT_SECONDS=15

# OpenAI API ключ для обработки сообщений
OPENAI_API_KEY=your_openai_api_key_here

# Токен платежного провайдера Telegram
PROVIDER_TOKEN=your_payment_provider_token_here

# Server Settings
HOST=0.0.0.0
PORT=5000
DEBUG=False
